---
# Based on ansible-lint config
extends: default

rules:
  line-length: disable
  comments:
    min-spaces-from-content: 1
    require-starting-space: false
  comments-indentation: disable
  brackets:
    max-spaces-inside: 1
  braces:
    max-spaces-inside: 1
  octal-values:
    forbid-implicit-octal: true
    forbid-explicit-octal: true
